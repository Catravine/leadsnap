<h3>Set a new Goal:</h3>
<%= form_for (:goal) do |f| %>
  <div class="form-group">
    <%= f.label :amount, "Amount: $" %>
    <%= f.text_field :amount %>
  </div>
  <div class="goal-checkbox">
    <%= f.label :weekly %>
    <%= f.check_box :weekly, checked: true %>
  </div>
  <div class="goal-checkbox">
    <%= f.label :individual %>
    <%= f.check_box :individual, checked: false %>
  </div>
  <div class="form-group">
    <%= f.submit "Set Goal", class: 'btn btn-success' %>
  </div>
<% end %>
