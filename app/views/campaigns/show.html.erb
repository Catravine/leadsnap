<h1><%= @campaign.name %><span class="year"><%= @campaign.year %></span></h1>

<div class="row">
  <div class="col-md-8">
    <p>Code: <%= @campaign.code %>, Callback #: <%= @campaign.callback_phone %>,
      Available: <%= @campaign.available %></p>
    <% if Lead.where(campaign_id: @campaign.id).count == 0 %>
      <h2>No leads yet.</h2>
    <% else %>
      <h2><%= link_to "Total Leads", lead_path(Lead.where(campaign_id: @campaign).sample) %>: <%= Lead.where(campaign_id: @campaign.id).count %></h2>
      <ul>
        <% Lead.where(campaign_id: @campaign.id).uniq.pluck(:source_code).each do |code| %>
          <li><%= link_to code, lead_path(Lead.where(campaign_id: @campaign, source_code: code).sample) %>: <%= Lead.where(campaign_id: @campaign.id, source_code: code).count %></li>
        <% end %>
      </ul>
      <p>(leads are randomly <code>sampled</code> for now.)</p>
    <% end %>

    <h3>Latest Notes:</h3>
    <p><%= @campaign.notes %></p>
  </div>
  <div class="col-md-4">
    <% if policy(Campaign).edit? %>
      <h3>Add Leads</h3>
      ...
      <h3>Edit this Campaign</h3>
      <%= link_to "Update", edit_campaign_path(@campaign), class: 'btn btn-success' %>
      <%= link_to "Delete", @campaign, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this campaign?'} %>
    <% end %>
  </div>
</div>
