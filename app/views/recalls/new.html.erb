<div id="show-callback">
  <h3>Make a Callback:</h3>
  <%= form_for Recall.new do |f| %>
    <%= f.hidden_field :current_lead_id, :value => lead.id  %>
    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
