<div class="row lead-title">
  <div class="col-md-8">
    <h1><%= campaign_name(@lead) %></h1>
  </div>
  <div class="col-md-4">
    <p><%= campaign_phone(@lead) %> // dial code: <%= campaign_code(@lead) %><br/>
    <%= campaign_notes(@lead) %></p>
  </div>
</div>

<hr/>

<div class="row">
  <div class="col-md-8">
    <table class="phone-numbers">
      <tr>
        <% if @lead.phone1 %>
          <td><%= @lead.phone1 %><span class="glyphicon glyphicon-remove"></span></td>
        <% end %>
        <% if @lead.phone2 %>
          <td><%= @lead.phone2 %><span class="glyphicon glyphicon-remove"></span></td>
        <% end %>
        <% if @lead.phone3 %>
          <td><%= @lead.phone3 %><span class="glyphicon glyphicon-remove"></span></td>
        <% end %>
      </tr>
    </table>

    <p class="lead-contact">
      <%= @lead.name1 %> <% if @lead.name2 %>&amp; <% @lead.name2 %><% end %><br/>
      <%= @lead.address1 %> <%= @lead.address2 %><br/>
      <%= @lead.city %>, <%= @lead.state %> &nbsp; <%= @lead.zip %>
    </p>



    <table class="phone-numbers">
      <tr>
        <td><%= @lead.source_code %></td>
        <% if @lead.account %>
          <td># <%= @lead.account %></td>
        <% end %>
      </tr>
    </table>
  </div>
  <div class="col-md-4">
    <h3>lead actions</h3>
  </div>
</div>

<hr/>

<div class="row">
  <div class="col-md-8">
    <h3>callback stuff</h3>
  </div>
  <div class="col-md-4">
    <%= link_to 'Next Lead >>', lead_path(Lead.all.sample), class: 'btn btn-success btn-lg' %>
    <br/>(next lead is *random* out of all leads in the system - for now.)
  </div>
</div>
