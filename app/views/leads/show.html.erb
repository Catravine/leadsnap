<div class="row lead-title">
  <div class="col-md-8">
    <h1><%= link_to @lead.campaign_name, campaign_path(@campaign) %></h1>
  </div>
  <div class="col-md-4">
    <p><%= @lead.campaign_callback_phone %> // dial code: <%= @lead.campaign_code %><br/>
    <%= @lead.campaign_notes %></p>
  </div>
</div>

<hr/>

<div class="row">
  <div class="col-md-8">
    <table class="phone-numbers">
      <tr>
        <% if @lead.phone1 %>
          <td>
            <%= form_for [@campaign, @lead], method: :patch do |f| %>
              <%= f.hidden_field :phone1, :value => "disc phone" %>
              <%= f.submit "disc 1", class: 'btn btn-danger' %>
            <% end %>
            <%= @lead.phone1 %><span class="glyphicon glyphicon-remove"></span>
          </td>
        <% end %>
        <% if @lead.phone2 %>
          <td>
            <%= form_for [@campaign, @lead], method: :patch do |f| %>
              <%= f.hidden_field :phone2, :value => "disc phone" %>
              <%= f.submit "disc 2", class: 'btn btn-danger' %>
            <% end %>
            <%= @lead.phone2 %><span class="glyphicon glyphicon-remove"></span>
          </td>
        <% end %>
        <% if @lead.phone3 %>
          <td>
            <%= form_for [@campaign, @lead], method: :patch do |f| %>
              <%= f.hidden_field :phone3, :value => "disc phone" %>
              <%= f.submit "disc 3", class: 'btn btn-danger' %>
            <% end %>
            <%= @lead.phone3 %><span class="glyphicon glyphicon-remove"></span>
          </td>
        <% end %>
      </tr>
    </table>

    <p class="lead-contact">
      <%= @lead.name1 %> <% if @lead.name2 %>&amp; <% @lead.name2 %><% end %><br/>
      <%= @lead.address1 %> <%= @lead.address2 %><br/>
      <%= @lead.city %>, <%= @lead.state %> &nbsp; <%= @lead.zip %>
    </p>



    <table class="phone-numbers">
      <tr>
        <td><%= @lead.source_code %></td>
        <% if @lead.account %>
          <td># <%= @lead.account %></td>
        <% end %>
      </tr>
    </table>
  </div>
  <div class="col-md-4 status">
    <%= lead_status(@lead) %>
    <% if !(@lead.killed?) %>
      <%= form_for [@campaign, @lead], method: :patch do |f| %>
        <%= f.hidden_field :killed, :value => true %>
        <%= f.submit "Kill", class: 'btn btn-danger' %>
      <% end %>
    <% end %>
    <% if !(@lead.day_lead?) %>
      <%= form_for [@campaign, @lead], method: :patch do |f| %>
        <%= f.hidden_field :day_lead, :value => true %>
        <%= f.submit "Day Lead", class: 'btn btn-warning' %>
      <% end %>
    <% end %>
  </div>
</div>

<hr/>

<div class="row">
  <div class="col-md-8">
    <h3>callback stuff</h3>
  </div>
  <div class="col-md-4">
    <% if @lead.day_lead? %>
    <%= link_to "Day Leads | Next Lead >>",
      campaign_lead_path(@campaign, @campaign.next_lead('day')),
      class: 'btn btn-success btn-lg' %>
    <% else %>
      <%= link_to "#{@lead.source_code} | Next Lead >>",
        campaign_lead_path(@campaign, @campaign.next_lead(@lead.source_code)),
        class: 'btn btn-success btn-lg' %>
      <% end %>
  </div>
</div>
