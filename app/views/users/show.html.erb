<div class="row">
  <div class="col-md-8">
    <h1><%= @user.nickname %><small> - <%= @user.role %> user</small></h1>
    <p>
      <%= link_to 'Edit profile', edit_user_registration_path %>:
      <%= @user.fullname %>: <%= @user.phone %> | <%= @user.email %>
    </p>

    <hr/>

    <%= render partial: 'search_results/search_form' %>
  </div>
  <div class="col-md-4 user-callbacks">
    <h3>Callbacks: <%= "none" if Callback.where(user: @user).count == 0 %></h3>
    <% Callback.where(user: @user).each do |cb| %>
      <div>
        <p><%= link_to cb.lead_name1, campaign_lead_path(cb.lead_campaign_id, cb.lead) %></p>
        <p class="cb-campaign"><%= "#{cb.lead_campaign.name}" %></p>
        <p><%= "#{cb.notes}" %></p>
      </div>
    <% end %>
  </div>
</div>
